<% provide(:title, "ユーザー画面") %>
<h1>【予約投稿フォーム】</h1>
<div class="user-pro">
    <div class="information">
        <h2><%= @user.name %>様</h2>
    </div>
</div>
<div class="form-group">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name,"お名前" %>
        <%= f.text_field :name,value:@user.name,
            class: 'form-control',readonly:true %>

        <%= f.label :email,"メールアドレス" %>
        <%= f.email_field :email,value:@user.email,
            class: 'form-control',readonly:true %>

        <%= f.label :password,"店舗名" %>
        <%= f.select :password,
            [["松山店",0],["砥部店",1],["北条店",2]],class: 'form-control' %>

        <%= f.label :password_confirmation, "トレーナー" %>
        <%= f.select :password_confirmation,
            [["斎藤俊輔",0],["大野智",1],["山口一",2]],class: 'form-control' %>

        <%= f.label :password,"希望日時とご要望があればお書きください" %>
        <%= f.text_area :password,class: 'form-control' %>

        <%= f.submit "予約する", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>